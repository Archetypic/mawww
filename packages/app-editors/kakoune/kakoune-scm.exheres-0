require github [ user=mawww ]

SUMMARY="Mawww's experiment for a better code editor"

LICENCES="public-domain"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        dev-libs/boost
        sys-libs/ncurses
"

src_compile() {
    cd ${WORK}/src
    emake
}

src_install() {
    cd ${WORK}/src
    emake DESTDIR="${IMAGE}" PREFIX=/usr install
}
